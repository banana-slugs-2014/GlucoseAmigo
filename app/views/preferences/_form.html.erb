<%= form_for [diabetic, preference] do |f| %>
  <%= f.label :reminders %><br>
  <%= f.label :reminders, "Yes", :value => "true" %>
  <%= f.radio_button :reminders, true, :checked => true %>
  <%= f.label :reminders, "No", :value => "false" %>
  <%= f.radio_button :reminders, false %><br><br>
  <%= f.label :frequency %><br>
  <%= f.select :frequency, (1..3) %><br><br>
<% end %>
